<div class="row">
  <div class="large-12 columns">
    <h1>Listing Facts</h1>

    <table>
      <thead>
        <tr>
          <th>Summary</th>
          <th>References</th>
          <th>Categories</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @facts.each do |fact| %>
            <tr>
              <td><%= fact.summary %></td>
              <td><%= fact.references %></td>
              <td><%= fact.categories %></td>
              <td><%= link_to 'Show', fact %></td>
              <td><%= link_to 'Edit', edit_fact_path(fact) %></td>
              <td><%= link_to 'Destroy', fact, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Fact', new_fact_path %>
  </div>
</div>