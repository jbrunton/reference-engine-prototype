<%= form_for(@fact) do |f| %>
    <% if @fact.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@fact.errors.count, "error") %> prohibited this fact from being saved:</h2>

          <ul>
            <% @fact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :summary %><br>
      <%= f.text_area :summary %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content, class: 'large' %>
    </div>
    <div class="field">
      <%= f.label :references %><br>
      <%= f.text_field :references_string %>
    </div>
    <div class="field">
      <%= f.label :categories %><br>
      <%= f.text_field :categories_string %>
    </div>
    <div class="field">
      <%= f.label :version_description %><br>
      <%= f.text_field :version_description %>
    </div>
    <div class="actions">
      <% unless @fact.new_record? %>
          <%= link_to 'Cancel', @fact, :class => 'small radius cancel button' %>
      <% end %>
      <%= f.submit 'Save', :class => 'small radius action button' %>
    </div>
<% end %>
