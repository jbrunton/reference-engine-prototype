<div class="row">
  <div class="large-12 columns">

    <%= markdownify_fact(@fact) %>

    <h3>References</h3>

    <% @fact.references.each do |reference| %>
        <div>
          <h5>
            <%= link_to reference.title, reference %>
            <%= link_to '[open]', reference.url, { class: 'external', target: '_blank' } %>
          </h5>
          <blockquote><%= reference.summary %></blockquote>
        </div>
    <% end %>

    <h3>Categories</h3>
    <% @fact.categories.each do |category| %>
        <p><%= category.name %></p>
    <% end %>

    <%= link_to 'Edit', edit_fact_path(@fact) %> |
    <%= link_to 'Back', facts_path %>
  </div>
</div>