<div class="row">
  <div class="large-12 columns">
    <h3>Browse Category: <%= @category.name %></h3>

    <% [@category].concat(@category.subcategories).each do |category| %>
        <ul class="breadcrumbs">
          <% category.ancestors.concat([category]).each do |cat| %>
              <li class="<%= cat == @category ? 'current' : '' %>">
                <%= link_to cat.short_name, :category => cat.name %>
              </li>
          <% end %>
        </ul>

        <ul class="square">
          <% category.facts.each do |fact| %>
              <li>
                <%= markdownify_fact(fact) %>
                <p><%= link_to '[Read in full]', fact %></p>
              </li>
          <% end %>
        </ul>
    <% end %>
  </div>
</div>