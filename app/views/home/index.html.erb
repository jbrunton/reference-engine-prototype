<div class="row">
  <div class="large-12 columns">
    <% @categories.each do |category| %>
        <h5><%= category.name %></h5>

        <ul class="square">
          <% category.facts.each do |fact| %>
              <li>
                <%= markdownify_fact(fact) %>
                <p><%= link_to '[Read in full]', fact %></p>
              </li>
          <% end %>
        </ul>
    <% end %>
  </div>
</div>