<div class="row">
  <div class="large-12 columns">
    <h3>Category: <%= @category.short_name %></h3>
    <ul class="breadcrumbs">
      <% @category.ancestors.concat([@category]).each do |cat| %>
          <li class="<%= cat == @category ? 'current' : '' %>">
            <%= link_to cat.short_name, :category => cat.name %>
          </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="large-8 columns">
    <h4>Facts</h4>
    <ul class="square">
      <% @category.facts.each do |fact| %>
          <li>
            <strong>Fact:</strong> <%= link_to fact.summary, fact %>
          </li>
      <% end %>
    </ul>
  </div>
  <div class="large-4 columns">
    <div class="panel">
      <h4>Subcategories</h4>
      <%= render partial: 'categories/tree', locals: { categories: @category.subcategories } %>
    </div>
    <div class="panel">
      <h4>Related Categories</h4>
      <ul class="square">
        <% @category.related_categories.each do |category| %>
            <li><%= link_to category.short_name, "/categories/#{category.name}" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>